<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.unifiedviews</groupId>
    <artifactId>uv-pom</artifactId>
    <version>2.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>uv-pom</name>

    <developers>
        <developer>
            <name>Petr Å koda</name>
            <email>skoda@ksi.mff.cuni.cz</email>
            <organization>Faculty of Mathematics and Physics, Charles University in Prague</organization>
        </developer>
    </developers>

    <properties>
        <!-- UV version for dependencies. -->
        <unifiedviews.api.version>2.1.0-SNAPSHOT</unifiedviews.api.version>

        <!-- Used bundle plugin version. -->
        <bundle.plugin.version>2.3.7</bundle.plugin.version>

        <!-- Versions of 3rd party libraries -->
        <!-- Vaadin -->
        <vaadin.version>7.3.7</vaadin.version>
        <confirmdialog.version>2.0.4</confirmdialog.version>
        <filteringtable.version>0.9.11.v7</filteringtable.version>
        <lazyquerycontainer.version>2.0.9</lazyquerycontainer.version>
        <refresher.version>1.2.1.7</refresher.version>
        <vaadin.spring.version>2.0.1</vaadin.spring.version>
        
        <!-- spring version -->
        <org.springframework.version>3.1.4.RELEASE</org.springframework.version>
        <org.springframework.security.version>3.1.4.RELEASE</org.springframework.security.version>
        
        <!-- other third party libraries versions -->
        <slf4j.version>1.7.7</slf4j.version>
        <logback.version>1.1.2</logback.version>
        <sesame.version>2.8.1</sesame.version>
        <junit.version>4.12</junit.version>
        <xstream.version>1.4.7</xstream.version>
        <commons.io>2.4</commons.io>
        <commons.dpcp.version>1.4</commons.dpcp.version>
        <commons.dbcp2.version>2.0.1</commons.dbcp2.version>
        <commons.cli.version>1.2</commons.cli.version>
        <commons.lang.version>3.1</commons.lang.version>
        <commons.validator.version>1.4.0</commons.validator.version>
        <h2.version>1.4.182</h2.version>
        <httpclient.osgi.version>4.3.3</httpclient.osgi.version>
        <httpcore.osgi.version>4.3.2</httpcore.osgi.version>
        <osgi.version>4.3.1</osgi.version>
        <jsch.version>0.1.49_1</jsch.version>
        <xml.apis.version>1.4.01</xml.apis.version>
        <mockito.version>1.8.4</mockito.version>
        <eclipse.osgi.version>3.9.0.v20130305-2200</eclipse.osgi.version>
        <javax.mail.version>1.4</javax.mail.version>
        <cglib.version>3.0</cglib.version>
        <asm.util.version>4.0</asm.util.version>
        <eclipselink.version>2.5.1</eclipselink.version>
        <mysql.jdbc.version>5.1.6</mysql.jdbc.version>
        <javax.persistence.version>2.1.0</javax.persistence.version>
        <postgres.jdbc.version>9.3-1102-jdbc41</postgres.jdbc.version>
        <jasypt.version>1.9.2</jasypt.version>
        <servlet.api.version>3.0.1</servlet.api.version>
        <cas.client.version>3.3.3</cas.client.version>
        <jersey.version>2.13</jersey.version>
        <virtuoso.sesame.version>1.21-7-develop-SNAPSHOT</virtuoso.sesame.version> <!-- 1.18-7-develop-SNAPSHOT -->
        <virtuoso.jdbc.version>3.76-7-develop-SNAPSHOT</virtuoso.jdbc.version> <!-- 3.74-7-develop-SNAPSHOT -->

        <!-- System properties. -->
        <project.java.source.version>1.7</project.java.source.version>
        <project.java.target.version>1.7</project.java.target.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
    </properties>

    <repositories>
        <repository>
            <id>maven.eea.sk</id>
            <name>maven.eea.sk-public</name>
            <url>http://maven.eea.sk/artifactory/public/</url>
        </repository>
    </repositories>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>eu.unifiedviews</groupId>
                <artifactId>uv-dpu-api</artifactId>
                <version>${unifiedviews.api.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.unifiedviews</groupId>
                <artifactId>uv-dpu-config-vaadin</artifactId>
                <version>${unifiedviews.api.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.unifiedviews</groupId>
                <artifactId>uv-dataunit-rdf</artifactId>
                <version>${unifiedviews.api.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.unifiedviews</groupId>
                <artifactId>uv-dataunit-files</artifactId>
                <version>${unifiedviews.api.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.unifiedviews</groupId>
                <artifactId>uv-dataunit-relational</artifactId>
                <version>${unifiedviews.api.version}</version>
            </dependency>

            <dependency>
                <groupId>org.openrdf.sesame</groupId>
                <artifactId>sesame-model</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>org.openrdf.sesame</groupId>
                <artifactId>sesame-repository-api</artifactId>
                <version>${sesame.version}</version>
            </dependency>

            <dependency>
                <groupId>commons-io</groupId>
                <artifactId>commons-io</artifactId>
                <version>${commons.io}</version>
            </dependency>
            <dependency>
                <groupId>com.thoughtworks.xstream</groupId>
                <artifactId>xstream</artifactId>
                <version>${xstream.version}</version>
            </dependency>
            <dependency>
                <groupId>com.vaadin</groupId>
                <artifactId>vaadin-server</artifactId>
                <version>${vaadin.version}</version>
            </dependency>

            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>${logback.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-core</artifactId>
                <version>${logback.version}</version>
            </dependency>

            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${slf4j.version}</version>
            </dependency>

            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <profiles>
        <!-- Profile for compilation with Java 8. -->
        <profile>
            <id>java8</id>
            <activation>
                <jdk>1.8</jdk>
            </activation>
            <properties>
                <project.java.target.version>1.8</project.java.target.version>
            </properties>
        </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>LICENSE.md</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${project.java.source.version}</source>
                    <target>${project.java.target.version}</target>
                    <!-- Print info about usage of deprecated API. -->
                    <compilerArgument>-Xlint:deprecation</compilerArgument>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
            </plugin>
        </plugins>
    </build>

</project>
